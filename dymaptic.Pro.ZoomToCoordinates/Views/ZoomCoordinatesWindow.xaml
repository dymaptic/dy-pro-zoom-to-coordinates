<controls:ProWindow x:Class="dymaptic.Pro.ZoomToCoordinates.Views.ZoomCoordinatesWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:controls="clr-namespace:ArcGIS.Desktop.Framework.Controls;assembly=ArcGIS.Desktop.Framework"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:extensions="clr-namespace:ArcGIS.Desktop.Extensions;assembly=ArcGIS.Desktop.Extensions"
        xmlns:converters="clr-namespace:dymaptic.Pro.ZoomToCoordinates.Converters" 
        xmlns:viewmodels="clr-namespace:dymaptic.Pro.ZoomToCoordinates.ViewModels" 
        d:DataContext="{d:DesignInstance Type=viewmodels:ZoomCoordinatesViewModel}"
        mc:Ignorable="d"
        Title="Zoom To Coordinates" Height="325" Width="300"
        WindowStartupLocation="CenterOwner">
    <controls:ProWindow.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <extensions:DesignOnlyResourceDictionary Source="pack://application:,,,/ArcGIS.Desktop.Framework;component\Themes\Default.xaml"/>
            </ResourceDictionary.MergedDictionaries>
            <converters:ScaleToBoolConverter x:Key="scaleToBoolConverterKey"/>
            <converters:BooleanToVisibilityConverter x:Key="boolToVisibilityConverterKey"/>
            <Style TargetType="RadioButton">
                <Setter Property="Margin" Value="5,0,0,0"/>
                <Setter Property="Foreground" Value="{DynamicResource Esri_TextStyleDisabledBrush}"/>
                <Style.Triggers>
                    <Trigger Property="IsChecked" Value="True">
                        <Trigger.Setters>
                            <Setter Property="Foreground" Value="{DynamicResource Esri_TextStyleDefaultBrush}"/>
                        </Trigger.Setters>
                    </Trigger>
                </Style.Triggers>
            </Style>
        </ResourceDictionary>
    </controls:ProWindow.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="100"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        
        <!-- Coordinate Format -->
        <Label Grid.Row="0" Grid.Column="0" Margin="5" Content="Format:" />
        <ComboBox Grid.Row="0" Grid.Column="1" Margin="5,5,10,5" 
                  ItemsSource="{Binding CoordinateFormats}"
                  SelectedItem="{Binding SelectedFormatItem}" />

        <!-- UTM/MGRS Controls -->
        <StackPanel Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2" 
                    Visibility="{Binding ShowUtmControls, Converter={StaticResource ResourceKey=boolToVisibilityConverterKey}}">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="100"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                </Grid.RowDefinitions>

                <Label Grid.Row="0" Grid.Column="0" Margin="5" Content="Zone:" />
                <ComboBox Grid.Row="0" Grid.Column="1" Margin="5,5,10,5"
                         ItemsSource="{Binding UTMZones}"
                         SelectedItem="{Binding SelectedUTMZone}"
                         ToolTip="Select a UTM Zone, and note that UTM Zone will also automatically update as the Easting changes." />

                <Label Grid.Row="1" Grid.Column="0" Margin="5" Content="Latitude Band:" />
                <TextBlock Grid.Row="1" Grid.Column="1" Margin="5,5,15,5"
                        Text="{Binding SelectedLatitudeBandItem.DisplayText}"
                        ToolTip="Latitude band automatically updates as the Northing changes."/>
                
                
                <!--<ComboBox Grid.Row="1" Grid.Column="1" Margin="5,5,10,5"
                         ItemsSource="{Binding LatitudeBands}" DisplayMemberPath="DisplayText"
                         SelectedItem="{Binding SelectedLatitudeBandItem}" 
                          IsEnabled="False" />   --><!--IsHitTestVisible="False" Focusable="False" />-->
            </Grid>
        </StackPanel>

        <!-- MGRS-only Control -->
        <StackPanel Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="2" 
                    Visibility="{Binding ShowMgrsControl, Converter={StaticResource ResourceKey=boolToVisibilityConverterKey}}">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="100"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto"/>
                </Grid.RowDefinitions>

                <Label Grid.Row="0" Grid.Column="0" Margin="5" Content="100 KM Grid ID" />
                <ComboBox Grid.Row="0" Grid.Column="1" Margin="5,5,5,5" 
                          ItemsSource="{Binding MgrsGridIds}" 
                          SelectedItem="{Binding OneHundredKMGridID}" />
            </Grid>
        </StackPanel>

        <!-- Coordinate text boxes -->
        <Label Grid.Row="3" Grid.Column="0" Margin="5" Content="{Binding XCoordinateLabel}" />
        <TextBox Grid.Row="3" Grid.Column="1" Margin="5,5,10,5" 
                 Text="{Binding XCoordinateString}"
                 ToolTip="{Binding XCoordinateToolTip}"/>
        <Label Grid.Row="4" Grid.Column="0" Margin="5" Content="{Binding YCoordinateLabel}" />
        <TextBox Grid.Row="4" Grid.Column="1" Margin="5,5,10,5" 
                 Text="{Binding YCoordinateString}"
                 ToolTip="{Binding YCoordinateToolTip}"/>

        <!-- Format Control -->
        <Label Grid.Row="5" Grid.Column="0" Margin="5" Content="Formatted?"/>
        <CheckBox Grid.Row="5" Grid.Column="1"
          IsChecked="{Binding ShowFormattedDegrees, Mode=TwoWay}"/>
        
        <!-- Display -->
        <Button Grid.Row="6" Grid.Column="0" Margin="5" Content="Copy" Command="{Binding CopyTextCommand}" Style="{DynamicResource Esri_Button}"/>
        <TextBox Grid.Row="6" Grid.Column="1" Margin="5,5,10,5" Text="{Binding Display, Mode=OneWay}" IsReadOnly="True"/>

        <!-- Radio Button Group -->
        <Label Grid.Row="7" Grid.Column="0" Content="Zoom Scale:" Margin="5"/>
        <StackPanel Orientation="Vertical" Grid.Row="7" Grid.Column="1" Grid.ColumnSpan="2" Margin="5,8,0,0">
            <RadioButton Content="5,000,000 - State" IsChecked="{Binding Scale, Converter={StaticResource ResourceKey=scaleToBoolConverterKey}, ConverterParameter=5000000}" Margin="0,0,0,5"/>
            <RadioButton Content="1,000,000 - County" IsChecked="{Binding Scale, Converter={StaticResource ResourceKey=scaleToBoolConverterKey}, ConverterParameter=1000000}" Margin="0,0,0,5"/>
            <RadioButton Content="100,000 - City" IsChecked="{Binding Scale, Converter={StaticResource ResourceKey=scaleToBoolConverterKey}, ConverterParameter=100000}" Margin="0,0,0,5"/>
            <RadioButton Content="10,000 - Block" IsChecked="{Binding Scale, Converter={StaticResource ResourceKey=scaleToBoolConverterKey}, ConverterParameter=10000}"  Margin="0,0,0,5"/>
            <RadioButton Content="1,000 - Street" IsChecked="{Binding Scale, Converter={StaticResource ResourceKey=scaleToBoolConverterKey}, ConverterParameter=1000}" Margin="0,0,0,5"/>
        </StackPanel>

        <!-- Checkbox -->
        <Label Grid.Row="8" Grid.Column="0" Content="Create Graphic?" Margin="5,0,0,0"/>
        <CheckBox Grid.Row="8" Grid.Column="1" Margin="5,5,0,0" IsChecked="{Binding CreateGraphic}"/>

        <!-- Buttons -->
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Grid.Row="9" Grid.Column="0" Grid.ColumnSpan="2">
            <Button Style="{DynamicResource Esri_Button}" Margin="5" Width="85" Content="Zoom" ToolTip="Zoom" Command="{Binding ZoomCommand}"/>
            <Button Style="{DynamicResource Esri_Button}" Margin="5" Width="85" Content="Close" ToolTip="Close" Click="CloseButton_Click"/>
        </StackPanel>
    </Grid>
</controls:ProWindow>
